{% extends 'base.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
    <h1>Event</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ event.name }}</td>
            </tr>

            <tr>
                <th>Capacity</th>
                <td>{{ event.capacity }}</td>
            </tr>

            <tr>
                <th>Notes</th>
                <td>{{ event.notes }}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}