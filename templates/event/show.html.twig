{% extends 'base.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
    <h1>Event</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ event.name }}</td>
            </tr>
            <tr>
                <th>Date_from</th>
                <td>{{ event.date_from ? event.date_from|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date_to</th>
                <td>{{ event.date_to ? event.date_to|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Capacity</th>
                <td>{{ event.capacity }}</td>
            </tr>
            <tr>
                <th>Is_active</th>
                <td>{{ event.is_active ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>User_list</th>
                <td>{{ event.user_list }}</td>
            </tr>
            <tr>
                <th>Notes</th>
                <td>{{ event.notes }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('event_index') }}">back to list</a>

    <a href="{{ path('event_edit', {'id': event.id}) }}">edit</a>

    {{ include('event/_delete_form.html.twig') }}
{% endblock %}